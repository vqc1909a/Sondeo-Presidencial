          <h3 class="d-none d-lg-block lead text-white">Rafael Lopez</h3>
          <div class="d-flex flex-column align-items-center">
            <h4 class="fw-bolder mb-3 text-white text-center">"RENOVACION POPULAR"</h4>
            <button type="button" class="btn-realizar btn btn-lg btn-porky" data-bs-toggle="modal" data-bs-target="#examplemodal" data-participante="lopez">Realizar Votación</button>
          </div>
        </div>
      </div>
      <div class="candidato candidato11">
        <div class="overlay position-absolute top-0 start-0 end-0 bottom-0 d-flex flex-column align-items-center justify-content-center">
          <img src="/images/URRESTI/Podemos Peru.jpg" class="rounded mb-2" alt="alianza-para-el-progreso">
          <h3 class="d-none d-lg-block lead text-white">Daniel Urresti</h3>
          <div class="d-flex flex-column align-items-center">
            <h4 class="fw-bolder mb-3 text-white text-center">"PODEMOS PERU"</h4>
            <button type="button" class="btn-realizar btn btn-lg btn-info" data-bs-toggle="modal" data-bs-target="#examplemodal" data-participante="urresti">Realizar Votación</button>
          </div>
        </div>
      </div>
      <div class="candidato candidato12">
         <div class="overlay position-absolute top-0 start-0 end-0 bottom-0 d-flex flex-column align-items-center justify-content-center">
          <img src="/images/VERONICA/Juntos por el Peru.jpg" class="rounded-circle mb-2" alt="alianza-para-el-progreso">
          <h3 class="d-none d-lg-block lead text-white">Veronika Mendoza</h3>
          <div class="d-flex flex-column align-items-center">
            <h4 class="fw-bolder mb-3 text-white text-center">"JUNTOS POR EL PERU"</h4>
            <button type="button" class="btn-realizar btn btn-lg btn-success" data-bs-toggle="modal" data-bs-target="#examplemodal" data-participante="mendoza">Realizar Votación</button>
          </div>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="examplemodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-body text-center">
              <div class="d-flex justify-content-end">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="">
                <div class="row justify-content-center">
                  <h5 class="lead fw-normal mb-3 text-danger">INGRESE SU DNI</h2>
                  <div class="col-12 col-md-8 mb-4">
                    <input type="text" class="field-dni form-control form-control" placeholder="Ejm: 72345128">
                  </div>
                </div>
                <button type="button" class="btn-validar btn btn-sm btn-danger mb-3 btn-">VALIDAR</button>
                <div class="row justify-content-center">
                  <h5 class="lead fw-normal mb-3 text-danger">APELLIDOS</h2>
                  <div class="col-12 col-md-8 mb-4">
                    <input type="text" class="field-apellidos form-control form-control" disabled>
                  </div>
                  <h5 class="lead fw-normal mb-3 text-danger">NOMBRES</h2>
                  <div class="col-12 col-md-8 mb-4">
                    <input type="text" class="field-nombres form-control form-control" disabled>
                  </div>
                </div>
                <button type="submit" class="btn-votar btn btn-lg btn-outline-danger mb-3">VOTAR</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
 <%- include('./partials/footerView.ejs'); %>
  

  <script src="/js/bootstrap.bundle.js"></script>
  <script src="/dist/bundle.js"></script>
